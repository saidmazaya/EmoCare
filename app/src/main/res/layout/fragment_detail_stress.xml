<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9C2C5"
    tools:context=".StressActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STRESS"
        android:textSize="24sp"
        android:padding="16dp"
        android:fontFamily="@font/nunitobold"
        android:textColor="@color/black"
        android:background="@color/primaryColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Bagian: Apa aja sih penyebabnya? -->
    <LinearLayout
        android:id="@+id/stressCausesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_penyebab"/>

        <TextView
            android:id="@+id/causesDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Stres adalah respons alami tubuh terhadap tekanan, yang bisa dipicu oleh pekerjaan, masalah pribadi, keuangan, perubahan hidup, atau kesehatan fisik yang buruk. Setiap orang mengalami stres berbeda."
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Bagian: Apa aja sih solusinya? -->
    <LinearLayout
        android:id="@+id/solutionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/stressCausesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_solusi"/>

        <!-- Solusi 1 -->
        <LinearLayout
            android:id="@+id/solution1Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primaryColor"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/solution1Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="18sp"
                android:fontFamily="@font/nunitoextrabold"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/solution1Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cari dukungan sosial dari teman, keluarga, atau rekan kerja."
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Solusi 2 -->
        <LinearLayout
            android:id="@+id/solution2Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E9C2C5"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/solution2Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textSize="18sp"
                android:fontFamily="@font/nunitoextrabold"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/solution2Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lakukan aktivitas fisik teratur, seperti olahraga atau praktik teknik relaksasi seperti meditasi."
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Solusi 3 -->
        <LinearLayout
            android:id="@+id/solution3Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primaryColor"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/solution3Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="18sp"
                android:fontFamily="@font/nunitoextrabold"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/solution3Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kelola waktu dengan baik dan kembangkan kemampuan coping."
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Solusi 4 -->
        <LinearLayout
            android:id="@+id/solution4Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E9C2C5"
            android:layout_marginTop="8dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/solution4Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4."
                android:textSize="18sp"
                android:fontFamily="@font/nunitoextrabold"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/solution4Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jika stres berlanjut atau memicu masalah kesehatan mental serius, konsultasikan dengan seorang profesional seperti psikolog atau psikiater."
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
