<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#9DB0CE"
    tools:context=".ArtikelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tombol Kembali -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Tombol Kembali -->
                <ImageButton
                    android:id="@+id/btn_back_depresi"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:src="@drawable/baseline_arrow_back_36"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cari tau yuk!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Daftar Artikel -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:dividerDrawable="@drawable/divider"
                android:showDividers="middle">

                <!-- Artikel 1 -->
                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="128dp"
                    android:orientation="horizontal"
                    android:background="@drawable/artikel_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/article_1"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/article_1" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/article_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Mengapa kesehatan mental itu penting"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/article_date_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nov 15 - 4 min read"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Artikel 2 -->
                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="128dp"
                    android:orientation="horizontal"
                    android:background="@drawable/artikel_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/article_2"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/article_2" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/article_title_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Kesehatan Mental dan Kesejahteraan Hidup"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/article_date_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nov 16 - 6 min read"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Artikel 3 -->
                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="128dp"
                    android:orientation="horizontal"
                    android:background="@drawable/artikel_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/article_3"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/article_3" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/article_title_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Apa Itu Depresi?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/article_date_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jan 3 - 6 min read"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Artikel 4 -->
                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="128dp"
                    android:orientation="horizontal"
                    android:background="@drawable/artikel_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/article_4"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/article_4" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/article_title_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Apa Itu Serangan Panik?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/article_date_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jan 3 - 6 min read"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Artikel 5 -->
                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="128dp"
                    android:orientation="horizontal"
                    android:background="@drawable/artikel_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">

                        <ImageView
                            android:id="@+id/article_5"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/article_5" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/article_title_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Terjawab: 7 Mitos Tentang Keseatan Mental"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/article_date_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jan 3 - 6 min read"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
