<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Foto Dokter -->
        <ImageView
            android:id="@+id/doctorImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_doctor"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- Nama Dokter -->
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dr. Amanda Charoline Sp.Kj, Dokter Psikologi Klinis"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Pengalaman -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/doctorExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#6D5677"
                android:drawableStart="@drawable/baseline_work_outline_24"
                android:drawablePadding="8dp"
                android:text="5 Tahun  "
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/doctorLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="#6D5677"
                android:drawableStart="@drawable/baseline_thumb_up_24"
                android:drawablePadding="8dp"
                android:text="65   "
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Harga -->
        <TextView
            android:id="@+id/doctorPrice"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Rp. 50.000 / Sesi"
            android:textColor="#000000"
            android:background="#C69BAA"
            android:textSize="16sp" />

        <!-- Informasi Tambahan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Alumnus -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/primaryColor"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_school_24"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/doctorAlumnus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Universitas Sumatera Utara, 2009\nUniversitas Indonesia, 2007"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Praktik di -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/primaryColor"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_location_on_24"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/doctorPractice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS Gandaria Jakarta Selatan, DKI Jakarta"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Nomor STR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/primaryColor"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_contact_mail_24"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/doctorStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="897654378 - 4579008"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tombol Konfirmasi -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#9747FF"
            android:text="Konfirmasi"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
