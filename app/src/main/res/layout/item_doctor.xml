<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Foto Dokter -->
        <ImageView
            android:id="@+id/doctorImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dokter1"
            android:contentDescription="@string/doctor_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"

        <!-- Nama Dokter -->
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/doctorImage"
            app:layout_constraintTop_toTopOf="@id/doctorImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" />

        <!-- Spesialisasi -->
        <TextView
            android:id="@+id/doctorSpecialty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spesialisasi: Kardiologi"
            android:textSize="14sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="@id/doctorName"
            app:layout_constraintTop_toBottomOf="@id/doctorName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Rating -->
        <TextView
            android:id="@+id/doctorRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ 4.8"
            android:textSize="14sp"
            android:textColor="#FFD700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
