<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_36"
            android:contentDescription="Back" />

        <!-- Doctor Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_doctor" />

        <!-- Doctor Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dr. Amanda Charoline Sp.Kj, Dokter"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Psikologi Klinis"
            android:textSize="16sp"
            android:textColor="#555555" />

        <!-- Slot Guarantee -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Slot Guarantee"
            android:backgroundTint="#9B51E0"
            android:textColor="#FFFFFF" />

        <!-- Hospital Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8D7DA"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RS Gandaria Jakarta Selatan"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jakarta Selatan, DKI Jakarta"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 50.000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Appointment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#DDEBF7"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih tanggal dan waktu telpon/panggilan video"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="#000000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pilih Tanggal"
                android:drawableEnd="@drawable/baseline_calendar_month_24"
                android:background="@color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jam layanan konsultasi"
                android:drawableEnd="@drawable/baseline_punch_clock_24"
                android:layout_marginTop="8dp"
                android:background="@color/white" />
        </LinearLayout>

        <!-- Alumni Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#DDEBF7"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ“ Alumnus"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universitas Indonesia, Fakultas Psikologi 2009\nUniversitas Indonesia, Spesialis Kesehatan Jiwa 2007"
                android:textSize="14sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Clinical Interests Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#DDEBF7"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kondisi dan Minat Klinis:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gangguan kecemasan (OCD, fobia, serangan panik, atau PTSD)\nGangguan mood (depresi atau bipolar)\nKecanduan (obat-obatan, alkohol ataupun judi)\nGangguan makan (anoreksia, bulimia)\nGangguan kepribadian"
                android:textSize="14sp"
                android:textColor="#555555" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
